{
  "name": "force-semicolon",
  "displayName": "Force Semicolon",
  "description": "Helps you use semicolons correctly in JavaScript and TypeScript.",
  "repository": "https://github.com/Calebh101/force-semicolon",
  "publisher": "Calebh101",
  "version": "0.3.4",
  "icon": "images/iconsmall.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:html"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "force-semicolon.analyze.all",
        "title": "Analyze All Files",
        "category": "Force Semicolon"
      },

      {"command": "force-semicolon.fix.current.missing", "title": "Fix Missing Semicolons (Current File)", "category": "Force Semicolon"},
      {"command": "force-semicolon.fix.current.unnecessary", "title": "Fix Unnecessary Semicolons (Current File)", "category": "Force Semicolon"},
      {"command": "force-semicolon.fix.current.extra", "title": "Fix Extra Semicolons (Current File)", "category": "Force Semicolon"},
      {"command": "force-semicolon.fix.current.all", "title": "Fix All Semicolon Issues (Current File)", "category": "Force Semicolon"},
      {"command": "force-semicolon.fix.open.missing", "title": "Fix Missing Semicolons (All Open Files)", "category": "Force Semicolon"},
      {"command": "force-semicolon.fix.open.unnecessary", "title": "Fix Unnecessary Semicolons (All Open Files)", "category": "Force Semicolon"},
      {"command": "force-semicolon.fix.open.extra", "title": "Fix Extra Semicolons (All Open Files)", "category": "Force Semicolon"},
      {"command": "force-semicolon.fix.open.all", "title": "Fix All Semicolon Issues (All Open Files)", "category": "Force Semicolon"},
      {"command": "force-semicolon.fix.all.missing", "title": "Fix Missing Semicolons (All Files)", "category": "Force Semicolon"},
      {"command": "force-semicolon.fix.all.unnecessary", "title": "Fix Unnecessary Semicolons (All Files)", "category": "Force Semicolon"},
      {"command": "force-semicolon.fix.all.extra", "title": "Fix Extra Semicolons (All Files)", "category": "Force Semicolon"},
      {"command": "force-semicolon.fix.all.all", "title": "Fix All Semicolon Issues (All Files)", "category": "Force Semicolon"}
    ],
    "configuration": {
      "type": "object",
      "title": "Force Semicolon",
      "properties": {
        "force-semicolon.missingSemicolonLintType": {
          "type": "string",
          "enum": [
            "Info",
            "Warning",
            "Error",
            "Off"
          ],
          "enumDescriptions": [
            "Show an info dialogue when a semicolon is missing.",
            "Show warnings when a semicolon is missing.",
            "Show errors when a semicolon is missing.",
            "Doesn't show anything when a semicolon is missing."
          ],
          "default": "Error",
          "description": "The type of lint triggered when a semicolon is missing."
        },
        "force-semicolon.unnecessarySemicolonLintType": {
          "type": "string",
          "enum": [
            "Info",
            "Warning",
            "Error",
            "Off"
          ],
          "enumDescriptions": [
            "Show an info dialogue when a semicolon is unnecessary.",
            "Show warnings when a semicolon is unnecessary.",
            "Show errors when a semicolon is unnecessary.",
            "Doesn't show anything when a semicolon is unnecessary."
          ],
          "default": "Warning",
          "description": "The type of lint triggered when a semicolon is unnecessary."
        },
        "force-semicolon.extraSemicolonLintType": {
          "type": "string",
          "enum": [
            "Info",
            "Warning",
            "Error",
            "Off"
          ],
          "enumDescriptions": [
            "Show an info dialogue when an extra semicolon is present.",
            "Show warnings when an extra semicolon is present.",
            "Show errors when an extra semicolon is present.",
            "Doesn't show anything when an extra semicolon is present."
          ],
          "default": "Warning",
          "description": "The type of lint triggered when an extra semicolon is present."
        },
        "force-semicolon.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Shows extra logs and reports for extension actions and scanned files. Do not activate this unless necessary, as it floods the console with 500+ logs for each type, file save, file switch, etc. and absolutely decimates performance."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.6",
    "@types/estraverse": "^5.1.7",
    "@types/estree": "^1.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@babel/parser": "^7.26.7",
    "@babel/traverse": "^7.26.7",
    "@babel/types": "^7.26.7"
  }
}
